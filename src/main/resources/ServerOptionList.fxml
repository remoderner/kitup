<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
      prefWidth="180.0"
      fx:id="rootVBox"
      stylesheets="MainStylesheet.css"
      styleClass="rootVBox"
      xmlns="http://javafx.com/javafx/9.0.0"
      fx:controller="view.OptionListController">
    <HBox fx:id="titleHBox"
          onMousePressed="#setOnPressed"
          onMouseDragged="#setOnDragged"
          styleClass="title-bar"
          prefHeight="20.0">
        <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
            <Label fx:id="titleLabel">
                <HBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                </HBox.margin>
            </Label>
        </HBox>
        <HBox alignment="CENTER" prefWidth="20.0">
            <!--<Label onMouseClicked="#miniWindows" styleClass="mini-button" text="_">
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" top="5.0"/>
                </HBox.margin>
            </Label>-->
            <Label onMouseClicked="#closeWindow" styleClass="close-button" text="X">
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </HBox.margin>
            </Label>
        </HBox>
    </HBox>
    <TextFlow prefHeight="15.0" prefWidth="130.0" textAlignment="CENTER">
        <Text fx:id="serverVersionQortes" fontSmoothingType="LCD" textAlignment="CENTER"/>
        <VBox.margin>
            <Insets bottom="10.0" top="10.0"/>
        </VBox.margin>
    </TextFlow>
    <TextFlow prefHeight="15.0" prefWidth="130.0" textAlignment="CENTER">
        <Text fx:id="serverVersionQortesDB" fontSmoothingType="LCD" textAlignment="CENTER"/>
        <VBox.margin>
            <Insets bottom="10.0" top="10.0"/>
        </VBox.margin>
    </TextFlow>
    <!--<HBox fx:id="contentHBox"
          spacing="5">
    </HBox>-->
    <VBox fx:id="contentVBox">
        <VBox.margin>
            <Insets bottom="25.0" left="25.0" right="25.0"/>
        </VBox.margin>
        <VBox prefWidth="130.0" spacing="10">
            <Button fx:id="update" onAction="#updateServer" prefWidth="150" text="Update"/>
            <Button fx:id="restart" onAction="#restartServer" prefWidth="150" text="Restart"/>
            <Button fx:id="start" onAction="#startServer" prefWidth="150" text="Start"/>
            <Button fx:id="stop" onAction="#stopServer" prefWidth="150" text="Stop"/>
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="ini" onAction="#openIni" text="ini"/>
                <Button fx:id="log" onAction="#openLog" text="log"/>
                <Button fx:id="dir" onAction="#openDir" text="dir"/>
            </HBox>
        </VBox>
    </VBox>
</VBox>
